    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "ORG API",
            "program": "${workspaceFolder}/src/api.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"]
        },

        {
            "type": "node-terminal",
            "name": "Debug Current TS File (ts-node)",
            "request": "launch",
            "command": "ts-node -- ${fileBasenameNoExtension}",
            "cwd": "${fileDirname}"
          },
    ]
}